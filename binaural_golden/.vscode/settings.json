{
  // ============================================================================
  // GOLDEN STUDIO - VS CODE SETTINGS (OPTIMIZED FOR COPILOT PRO PLUS)
  // ============================================================================

  // === MCP (Model Context Protocol) ===
  "chat.mcp.access": "all",
  "chat.mcp.discovery.enabled": {},
  "chat.mcp.autoStart": "newAndOutdated",

  // === AGENT MODE (COPILOT PRO PLUS FEATURE) ===
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 50,
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,

  // === INLINE SUGGESTIONS ===
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.fixes": true,
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,

  // === CHAT SETTINGS ===
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.detectParticipant.enabled": true,
  "chat.checkpoints.enabled": true,
  "chat.editRequests": "inline",
  "chat.useAgentsMdFile": true,
  "chat.math.enabled": true,

  // === TERMINAL AUTO-APPROVE (adjust for your comfort level) ===
  "chat.tools.terminal.enableAutoApprove": true,
  "chat.tools.terminal.autoApprove": {
    "ls": true,
    "cat": true,
    "grep": true,
    "find": true,
    "head": true,
    "tail": true,
    "wc": true,
    "pwd": true,
    "echo": true,
    "python": true,
    "pytest": true,
    "pip": true,
    "uv": true,
    "git status": true,
    "git diff": true,
    "git log": true,
    "rm": false,
    "rmdir": false,
    "del": false,
    "kill": false,
    "chmod": false,
    "chown": false,
    "/^sudo\\b/i": false
  },

  // === CUSTOM INSTRUCTIONS LOCATIONS ===
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    ".github": true
  },
  "chat.promptFilesLocations": {
    ".github/prompts": true
  },

  // === PYTHON SPECIFIC ===
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  
  // === SEARCH ===
  "search.searchView.semanticSearchBehavior": "auto",

  // === EXPERIMENTAL (OPTIONAL) ===
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.codesearch.enabled": true
}
